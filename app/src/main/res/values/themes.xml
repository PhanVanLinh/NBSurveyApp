<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidNBSurveyApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/dark_charcoal</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_charcoal</item>
        <!-- Customize your theme here. -->
        <!-- it will help us remove the default background -->
        <item name="android:windowBackground">@null</item>
        <item name="android:fontFamily">@font/roboto_app_font</item>

        <item name="textPrimaryColor">@color/white</item>
        <item name="textPrimaryPressed">@color/dark_charcoal</item>

        <item name="textSecondaryColor">@color/dark_charcoal</item>
        <item name="textSecondaryColorPressed">@color/white</item>
    </style>
</resources>